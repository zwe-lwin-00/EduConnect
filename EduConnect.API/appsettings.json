{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft": "Warning" }
    },
    "File": {
      "Path": "Logs/educonnect-.txt",
      "RetainedFileCountDays": 31
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EduConnectDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Cors": {
    "AllowedOrigins": "http://localhost:5480;https://localhost:5480"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyForJWTTokenGenerationMustBeAtLeast32CharactersLong!",
    "Issuer": "EduConnect",
    "Audience": "EduConnectUsers",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "Encryption": {
    "Key": "YourEncryptionKeyMustBe32CharactersLong!!"
  },
  "SeedData": {
    "Roles": [ "Admin", "Teacher", "Parent" ],
    "DefaultAdmin": {
      "Email": "admin@educonnect.com",
      "Password": "1qaz!QAZ",
      "FirstName": "Admin",
      "LastName": "User",
      "PhoneNumber": "+959123456789"
    }
  },
  "Gemini": {
    "ApiKey": "YOUR_GEMINI_API_KEY_HERE"
  },
  "RateLimiting": {
    "GlobalPermitLimit": 100,
    "GlobalWindowMinutes": 1,
    "AuthPermitLimit": 10,
    "AuthWindowMinutes": 1,
    "RejectedMessage": "Too many requests. Try again later.",
    "RejectedCode": "RATE_LIMITED"
  },
  "TimeZone": {
    "Id": "Asia/Yangon",
    "IdFallback": "Myanmar Standard Time"
  },
  "HealthChecks": {
    "LivePath": "/health/live",
    "ReadyPath": "/health/ready"
  }
}
